{
  "description": "RIA-3278 Change state to paymentPending for appeal type EA for pay later (with a hearing)",
  "enabled": "{$featureFlag.isfeePaymentEnabled}",
  "request": {
    "uri": "/asylum/ccdAboutToSubmit",
    "credentials": "LegalRepresentative",
    "input": {
      "eventId": "submitAppeal",
      "state": "appealStarted",
      "caseData": {
        "template": "minimal-appeal-submitted.json",
        "replacements": {
          "payForTheAppeal": "payLater",
          "appealType": "refusalOfEu",
          "decisionHearingFeeOption": "decisionWithHearing",
          "homeOfficeDecisionDate": "{$TODAY-14}",
          "paymentStatus": "Payment due",
          "sendDirectionActionAvailable": "No"
        }
      }
    }
  },
  "expectation": {
    "status": 200,
    "errors": [],
    "caseData": {
      "template": "minimal-appeal-submitted.json",
      "replacements": {
        "appealType": "refusalOfEu",
        "homeOfficeDecisionDate": "{$TODAY-14}",
        "paymentStatus": "Payment due",
        "sendDirectionActionAvailable": "No",
        "currentCaseStateVisibleToLegalRepresentative": "pendingPayment"
      }
    }
  }
}
