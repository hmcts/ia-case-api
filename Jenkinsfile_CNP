#!groovy
properties([
    [$class: 'GithubProjectProperty', projectUrlStr: 'https://github.com/hmcts/ia-case-api.git'],
    pipelineTriggers([[$class: 'GitHubPushTrigger']])
])


@Library("Infrastructure")

def type = "java"
def product = "ia"
def component = "case-api"

